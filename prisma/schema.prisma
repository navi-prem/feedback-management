generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
    card_id String
    reg_no String @id
    name String
    email String

    year_reln Year @relation(fields: [year],references: [year])
    year Int

    dept_reln Department @relation(fields: [dept],references: [name])
    dept String

    subjects Subject[]

    responded Response[]

    @@unique([card_id,reg_no,email])
}

model Year {
    year Int @id
    students Student[]
    events Event[]
}

model Teacher {
    name String
    id String @id
    email String
    card_id String
    as_HOD Department?
    hosted_events Event[]
    @@unique([id,card_id,email])
}

model Department {
    name String @id
    HOD Teacher @relation(fields: [HOD_id],references: [id])
    HOD_id String @unique
    students Student[]
    events Event[]
}

model Subject {
    code String @id
    students Student[]
}

model Event {
    id Int @id @default(autoincrement())
    created_by Teacher @relation(fields: [teacher_id],references: [id])
    teacher_id String
    year Year[]
    dept Department[]
    questions Question[]
}

model Question {
    id Int @id @default(autoincrement())
    required Boolean
    is_answer Boolean
    is_multi Boolean
    question String
    events Event[]
    options Option[]
}

model Option {
    id Int @id @default(autoincrement())
    option String
    question Question[]
    responsed Response[]
}

model Response {
    id Int @id @default(autoincrement())
    student Student @relation(fields: [stu_id],references: [reg_no])
    stu_id String
    option Option[]
    answer String?
}
